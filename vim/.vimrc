set number
set tabstop=4
set shiftwidth=4
set nobackup
set nowritebackup
set noswapfile
set noundofile
set autoindent
set scrolloff=10
set laststatus=2
set statusline=%!getcwd()
set tabpagemax=100
set expandtab
syntax on
nnoremap <C-J> <C-W><C-J>
nnoremap <C-K> <C-W><C-K>
nnoremap <C-L> <C-W><C-L>
nnoremap <C-H> <C-W><C-H>
